{{#if alert}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

<div class="row">
    <div class="col-6">
        <h1>Admin Login</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
    <a href="/registerform" type="button" class="btn btn-primary align-self-center">Register Now</a>
  </div>
</div>


<form class="row g-3 needs-validation" method="post" novalidate>
    <div class="form-floating position-relative mb-3">
        <input type="text" name="user" class="form-control" id="floatingInput validationServer01" placeholder="name@example.com"
            required>
        <label for="floatingInput validationServer01">Email address</label>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please provide a Email-Id.
        </div>
    </div>
    <div class="form-floating position-relative mb-3">
        <input type="password" name="lpassword" class="form-control" id="floatingInput validationServer02" placeholder="Password"
            required>
        <label for="floatingInput validationServer02">Password</label>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Password can't be empty!
        </div>
    </div>
    <div class="col-12 mt-4">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck">
                Agree to terms and conditions
            </label>
            <div class="invalid-feedback">
                You must agree before Login.
            </div>
        </div>
    </div>
    <div class="col-12 mt-5">
        <button class="btn btn-primary" type="submit">Login</button>
    </div>
</form>