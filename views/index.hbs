{{#if alert}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}


<div class="row">
  <div class="col-6">
    <h1>Users Data</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add user</a>
  </div>
</div>

<table class="table table-bordered myTable">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Contact No.</th>
      <th scope="col" class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>

    {{#each results}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.contact}}</td>
      <td>{{this.email}}</td>
      <td class="text-end">

        <a href="/userInfo/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>


        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i
            class="bi bi-pencil"></i>Edit</a>

        <button class="btn btn-danger btn-small" onclick="delUser({{this.id}})"><i
            class="bi bi-person-x"></i>Delete</button>

      </td>
    </tr>
    {{/each}}

  </tbody>
</table>